#!/bin/sh
basedir=$(dirname "$(echo "$0" | sed -e 's,\\,/,g')")

case `uname` in
    *CYGWIN*|*MINGW*|*MSYS*)
        if command -v cygpath > /dev/null 2>&1; then
            basedir=`cygpath -w "$basedir"`
        fi
    ;;
esac

if [ -z "$NODE_PATH" ]; then
  export NODE_PATH="/Users/quan/Documents/Blog/node_modules/.pnpm/simple-git-hooks@2.13.1/node_modules/simple-git-hooks/node_modules:/Users/quan/Documents/Blog/node_modules/.pnpm/simple-git-hooks@2.13.1/node_modules:/Users/quan/Documents/Blog/node_modules/.pnpm/node_modules"
else
  export NODE_PATH="/Users/quan/Documents/Blog/node_modules/.pnpm/simple-git-hooks@2.13.1/node_modules/simple-git-hooks/node_modules:/Users/quan/Documents/Blog/node_modules/.pnpm/simple-git-hooks@2.13.1/node_modules:/Users/quan/Documents/Blog/node_modules/.pnpm/node_modules:$NODE_PATH"
fi
if [ -x "$basedir/node" ]; then
  exec "$basedir/node"  "$basedir/../simple-git-hooks/cli.js" "$@"
else
  exec node  "$basedir/../simple-git-hooks/cli.js" "$@"
fi
